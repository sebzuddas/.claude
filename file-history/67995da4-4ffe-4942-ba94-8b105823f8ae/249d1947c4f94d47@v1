'use client'

import { useState, useRef } from 'react'

interface ExportMenuProps {
  onExportImage: () => void
  onExportGif?: () => void
  onExportVideo?: () => void
  isRecording?: boolean
  recordingType?: 'gif' | 'video' | null
  recordingProgress?: number
  className?: string
}

export default function ExportMenu({
  onExportImage,
  onExportGif,
  onExportVideo,
  isRecording = false,
  recordingType = null,
  recordingProgress = 0,
  className = ''
}: ExportMenuProps) {
  const [isOpen, setIsOpen] = useState(false)
  const menuRef = useRef<HTMLDivElement>(null)

  const handleExport = (type: 'image' | 'gif' | 'video') => {
    setIsOpen(false)
    switch (type) {
      case 'image':
        onExportImage()
        break
      case 'gif':
        onExportGif?.()
        break
      case 'video':
        onExportVideo?.()
        break
    }
  }

  return (
    <div className={`relative ${className}`} ref={menuRef}>
      <button
        onClick={() => setIsOpen(!isOpen)}
        className="btn px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 flex items-center gap-2"
        disabled={isRecording}
      >
        {isRecording ? (
          <>
            <svg className="animate-spin h-4 w-4" fill="none" viewBox="0 0 24 24">
              <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
              <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Recording {recordingType}... {recordingProgress}%
          </>
        ) : (
          <>
            <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            Export
          </>
        )}
      </button>

      {isOpen && !isRecording && (
        <>
          {/* Backdrop */}
          <div
            className="fixed inset-0 z-10"
            onClick={() => setIsOpen(false)}
          />

          {/* Menu */}
          <div className="absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-xl z-20 overflow-hidden border border-gray-200">
            <div className="py-1">
              {/* Image Export */}
              <button
                onClick={() => handleExport('image')}
                className="w-full px-4 py-3 text-left hover:bg-gray-100 flex items-center gap-3 transition-colors"
              >
                <svg className="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <div>
                  <div className="font-medium text-gray-900">Save as PNG</div>
                  <div className="text-xs text-gray-500">Current frame snapshot</div>
                </div>
              </button>

              {/* GIF Export */}
              {onExportGif && (
                <button
                  onClick={() => handleExport('gif')}
                  className="w-full px-4 py-3 text-left hover:bg-gray-100 flex items-center gap-3 transition-colors"
                >
                  <svg className="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
                  </svg>
                  <div>
                    <div className="font-medium text-gray-900">Save as GIF</div>
                    <div className="text-xs text-gray-500">5-second animation</div>
                  </div>
                </button>
              )}

              {/* Video Export */}
              {onExportVideo && (
                <button
                  onClick={() => handleExport('video')}
                  className="w-full px-4 py-3 text-left hover:bg-gray-100 flex items-center gap-3 transition-colors"
                >
                  <svg className="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                  <div>
                    <div className="font-medium text-gray-900">Save as Video</div>
                    <div className="text-xs text-gray-500">10-second WebM recording</div>
                  </div>
                </button>
              )}
            </div>
          </div>
        </>
      )}
    </div>
  )
}
